<h1>投稿一覧</h1>
<% @posts.each do |post| %>
    <p>旅行先</p>
    <span><%= link_to post.location, post_path(post) %></span>
    <p>画像</p>
    <%= attachment_image_tag post, :image, format: 'jpeg', size: '100x100' %>
<% end %>

<div class="cover-index">
  <div class="container d-flex flex-colum align-items-center">
    <div class="row mt-5">
      <div class="font-weight-normal">旅行投稿一覧</h1>
    </div>
    <div class="row mt-5 index-left w-100">
      <% @posts.each do |post| %>
        <div class="one-post col-sm-4 mb-3">
          <%= link_to post_path(post) do %>
            <p class="caption">ユーザー名</p>
            <%= attachment_image_tag post, :image, format: 'jpeg', size: '300x200' %>
            <p class="caption"><%= post.location %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>